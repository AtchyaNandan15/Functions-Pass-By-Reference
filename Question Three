#include <iostream>
#include<string>
#include <ctype.h>

using namespace std;

void change(string &w1);

int main()
{
  
  string word;
  int w;
  int lengths;


  cout<<" Enter a word";
  cin>>word;
  

  
   for(w=0;w<word.length();w++) {
      
      word[w]=tolower(word[w]);
  }
  
  change(word);

cout<<word<<"\n";
}


void change(string &w1) {
    
    int len;
    int i;
   
    len = w1.length();
    for(i=0;i<len;i++) {
   
 
  
  if(w1[i]=='a'){
     w1[i]='v';
    
  }
  
  if(w1[i]=='b'){
     w1[i]='r';
    
  }
  

     
 }
 
    
}








