 }
    
}

void back(string &w2) {
    
    int leng;
    int a;
   
    leng = w2.length();
    for(a=0;a<leng;a++) {
   
 
  if(w2[a]=='v'){
     w2[a]='a';
     }
  
    else if(w2[a]=='r'){
     w2[a]='b';
    }
    else if(w2[a]=='a'){
     w2[a]='c';
    }
