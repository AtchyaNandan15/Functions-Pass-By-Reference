#include <iostream>
#include<string>
#include <ctype.h>

using namespace std;

void change(string &w1);
void back(string &w2);


int main()
{
  
  string word;
  string word2;
  int w;
  int lengths;
  


  cout<<" Enter your word";
  cin>>word;
  

  

  
   for(w=0;w<word.length();w++) {
      
      word[w]=tolower(word[w]);
  }
  
change (word);
cout<<word<<"\n";

cout<<"Enter your encrypted word";
cin>>word2;

back(word2);
cout<<word2<<"\n";


}


void change(string &w1) {
    
    int len;
    int i;
   
    len = w1.length();
    for(i=0;i<len;i++) {
   
 
  
    if(w1[i]=='a'){
     w1[i]='v';
     }
  
    else if(w1[i]=='b'){
     w1[i]='r';
    }
    else if(w1[i]=='c'){
     w1[i]='a';
    }
    else if(w1[i]=='d'){
     w1[i]='h';
    }
    
    else if(w1[i]=='e'){
     w1[i]='e';
    }
    else if(w1[i]=='f'){
     w1[i]='w';
    }
    
    else if(w1[i]=='g'){
     w1[i]='n';
