#include <iostream>
using namespace std;

void wage12(float &w12);

int main()
{
    
float wage;

do{
cout<<"Enter your wage";
cin>>wage;

wage12(wage);

cout<<wage<<"\n";

}while(wage>0);

}

void wage12(float &w12) {
w12 = w12+w12*0.12;
    
    
}

